{
  "name": "node-scss-template",
  "version": "0.0.2",
  "description": "node-scss-template",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "browser-sync": "^2.26.12",
    "concurrently": "^5.2.0",
    "cpx": "^1.5.0",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-rsync": "^0.0.9",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "node-sass": "^4.14.1",
    "onchange": "^6.1.1",
    "panini": "^1.7.1"
  },
  "scripts": {
    "build:css": "node-sass -r --output-style expanded --indent-width 4 -o dev/css src/scss",
    "build:html": "panini --root=src/html --layouts=src/html/tpl/layouts --partials=src/html/tpl/partials --data=src/html/tpl/data --output=dev 'src/html/*.html'",
    "build:js": "cpx 'src/js/**/*.js' dev/js",
    "build:img": "cpx 'src/img/**/*' dev/img",
    "build:fonts": "cpx 'src/fonts/**/*' dev/fonts",
    "build": "concurrently 'npm run build:css' 'npm run build:html' 'npm run build:js' 'npm run build:img' 'npm run build:fonts'",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
    "watch:html": "onchange 'src/html/**/*.html' -- npm run build:html",
    "watch:js": "cpx 'src/js/**/*.js' dev/js --watch",
    "watch:img": "cpx 'src/img/**/*' dev/img --watch",
    "watch:fonts": "cpx 'src/fonts/**/*' dev/fonts --watch",
    "watch": "concurrently 'npm run serve' 'npm run watch:css' 'npm run watch:html' 'npm run watch:js' 'npm run watch:img' 'npm run watch:fonts'",
    "serve": "browser-sync dev -w --no-notify"
  },
  "author": "V.Aysin aka Wah",
  "license": "ISC"
}
